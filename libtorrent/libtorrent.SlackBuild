# Ernest Kugel, 2014

PRGNAM="libtorrent"
VERSION="1.0.7"
APP_URL=https://github.com/arvidn/libtorrent.git
GIT_TAG="libtorrent-1_0_7"
BUILD_DIR=/tmp/SlackBuild-${PRGNAM}-$(date +%s)
TAG="1"

set -e

source ../functions.sh

# Clone/Pull latest
git-pull ${PRGNAM} ${APP_URL} ${GIT_TAG}

stage ./${PRGNAM} ${BUILD_DIR}

build ${PRGNAM} ${VERSION} ${TAG} ${BUILD_DIR} ' ' '-p'
